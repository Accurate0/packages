pkgname=maim-git
_realname=maim
pkgver=v5.5.3.r37.gbd8e950
pkgrel=1
epoch=1
provides=( 'maim' )
conflicts=( 'maim' )
pkgdesc="maim (make image) makes an image out of the given area on the given X screen. Defaults to the whole screen."
arch=( 'i686' 'x86_64' )
url="https://github.com/Accurate0/$_realname"
license=( 'GPL3' )
depends=( 'slop' 'bzip2' 'freetype2' 'glibc' 'libpng' 'libjpeg-turbo' 'libx11' 'libxext' 'zlib' 'libxrender' 'libxrandr' )
makedepends=( 'cmake' 'glm' )
source=( "maim::git+https://github.com/Accurate0/$_realname.git" )
md5sums=('SKIP')

build() {
    cd "$srcdir/$_realname"
    cmake -DCMAKE_INSTALL_PREFIX=/usr ./
    make
}

package() {
    cd "$srcdir/$_realname"
    make DESTDIR="$pkgdir" install
}
